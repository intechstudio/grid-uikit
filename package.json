{
  "name": "@intechstudio/grid-uikit",
  "version": "0.0.65",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build-css": "npx postcss src/*.css --dir ./dist --config ./postcss.config.js && postcss src/app.css -o dist/app.css",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "copy-files": "copyfiles -u 1 src/lib/assets/**/* dist",
    "package": "svelte-package && publint && npm run build-css && npm run copy-files",
    "prepublishOnly": "npm run package",
    "lint": "prettier --check .",
    "format": "prettier --write ."
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "style": "./dist/app.css"
    },
    "./dist/app.css": "./dist/app.css",
    "./tailwind.config": "./tailwind.config.js"
  },
  "files": [
    "dist",
    "tailwind.config.js",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "dependencies": {
    "@melt-ui/svelte": "^0.83.0",
    "svelte": "^4.2.12",
    "svelte-easy-popover": "^1.0.0"
  },
  "devDependencies": {
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.2",
    "@tsconfig/svelte": "^5.0.2",
    "autoprefixer": "^10.4.20",
    "copyfiles": "^2.4.1",
    "postcss": "^8.5.1",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "publint": "^0.1.9",
    "svelte-check": "^3.6.7",
    "tailwindcss": "^3.4.4",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module"
}
